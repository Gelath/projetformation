{% extends 'base.html.twig' %}

{% block title %}Hello UserController!{% endblock %}



{% block body %}

    {% if is_granted('ROLE_ADMIN') %}

    <a href="{{ path('user_new') }}" class="btn btn-primary"> Ajouter un utilisateur </a>

    {% endif %}

    <table class="table">
        <thead>
            <tr>
                <th>Formateur</th>
                <th>Date d'entr√©e</th>
                {% if is_granted('ROLE_ADMIN') %}
                <th>Niveau<th>
                <th>Modifier</th>
                <th>Supprimer</th>
                {% endif %}
                
            </tr>
        </thead>

        <tbody>

        {% for user in users %}

            {# {% if 'ROLE_ADMIN' not in user.roles and 'ROLE_SUPER_ADMIN' not in user.roles  %} #}
                <tr>
                <td><a href="{{ path('user_show', {'id':user.id}) }}">{{ user.nom ~" "~ user.prenom }}</a></td>
                <td>{{ user.dateEntree.format( 'd/m/y') }}</td>
                {% if is_granted('ROLE_ADMIN') %}
                    <td>            
                    {% for role in user.roles %}
                        {{ role ~"," }}
                    {% endfor %}
                </td>
                    <td><a href="{{ path('user_edit', {'id':user.id}) }}" class="btn btn-warning"> Modifier</a></td>
                    <td>{{ include('user/delete.html.twig') }}</td>

                {# {% endif %} #}
            </tr>
            {% endif %}
                     
        {% endfor %}

        </tbody>
    </table>


{% endblock %}
