{% extends 'base.html.twig' %}

{% block body %}

    <h1>Session</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Initulé</th>
                <td>
                {{ session.contenir.nomFormation}}
                </td>
            </tr>
            <tr>
                <th>Promotion</th>
                <td>{{ session.Promotion }}</td>
            </tr>
            <tr>
                <th>NbPlaces</th>
                <td>{{ session.NbPlace }}</td>
            </tr>
            <tr>
                <th>Date de début</th>
                <td>{{ session.dateDebut.format('d/m/Y') }}</td>
            </tr>
            <tr>
                <th>DateFin</th>
                <td>{{ session.dateFin.format('d/m/Y') }}</td>
            </tr>
            
            <tr>
                <th>Salle</th>
                <td>{{ session.salle.nomSalle }}</td>
            </tr>
            <tr>
                <th>Stagiaires</th>
                
                
            {% for stagiaire in session.stagiaires %}
            <td>
                <a href="{{ path('stagiaire_show', {'id': stagiaire.id}) }}">{{ stagiaire }}</a>
            </td>
            {% if date(session.dateFin) > date() %}
             
                <td>
                    <a href="{{ path('stagiaire_pdf', {'id': stagiaire.id,'id_session': session.id}) }}">PDF</a>
                </td>

            {% endif %}

            {% endfor %}
                
            </tr>
            
            
        </tbody>
    </table>
{% endblock %}
