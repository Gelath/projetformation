{% extends 'base.html.twig' %}

{% block title %}Hello StagiaireController!{% endblock %}

{% block body %}

    {% for message in app.flashes('success') %}
        <div class="flash-notice alert alert-success" role="alert">
            {{ message }}
        </div>
    {% endfor %}
    <h1>Stagiaire index</h1>

    <table class="table table-hover">
        <thead>
            <tr>
                
                <th scope="col">Stagiaire</th>
                <th scope="col">dateNaissance</th>
                <th scope="col" colspan='2'>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for stagiaire in stagiaires %}
            <tr class="table-primary">
                
                <td><a href="{{ path('stagiaire_show', {'id': stagiaire.id}) }}">{{ stagiaire.nom ~" "~ stagiaire.prenom }}</a></td>
                <td>{{ stagiaire.dateNaissance ? stagiaire.dateNaissance|date('d-m-Y') : '' }}</td>
                <td>
                    <a href="{{ path('stagiaire_pdf', {'id': stagiaire.id}) }}">PDF</a>
                    {% if is_granted('ROLE_ADMIN') %}
                        <a href="{{ path('stagiaire_edit', {'id': stagiaire.id}) }}">edit</a>
                    </td>
                    <td>{{ include('stagiaire/delete_form.html.twig') }}</td>
                    {% endif %}
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    
    {% if is_granted('ROLE_ADMIN') %}

    <a href="{{ path('stagiaire_new') }}">Create new</a>

    {% endif %}
{% endblock %}
