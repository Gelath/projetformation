{% extends 'base.html.twig' %}



{% block body %}

<img src= "https://i0.wp.com/www.tom.travel/wp-content/uploads/2019/04/La-SNCF-offre-une-formation-de-developpeur-web-avec-embauche-a-la-cle.jpg?ssl=1" class="card-img-top" alt="..." style="width:50em; height:40em;">

    {% for message in app.flashes('success') %}
        <div class="flash-notice alert alert-success" role="alert">
            {{ message }}
        </div>
    {% endfor %}


    {% if is_granted('ROLE_ADMIN') %}

    <a href="{{ path('salle_new') }}" class="btn btn-primary">Cr√©er une nouvelle salle</a>

    {% endif %}

    <table class="table table-striped">
        <thead>
            <tr>
               
                <th>NomSalle</th>
                <th>Nbplaces</th>

                {% if is_granted('ROLE_ADMIN') %}

                <th>Modifier</th>
                <th>Supprimer</th>

                {% endif %}
            </tr>
        </thead>
        <tbody>
        {% for salle in salles %}
            <tr>
                
                <td><a href="{{ path('salle_show', {'id': salle.id}) }}">{{ salle.nomSalle }}</a></td>

                <td><a href="{{ path('salle_show', {'id': salle.id}) }}">{{ salle.nbPlaces }}</a></td>



                
                
                {% if is_granted('ROLE_ADMIN') %}
                    <td>
                        <a href="{{ path('salle_edit', {'id': salle.id}) }}">Modifier</a>
                    </td>
                    <td>
                        {{ include('salle/delete_form.html.twig') }}
                    </td>
                {% endif %}
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

  
{% endblock %}
