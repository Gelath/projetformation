{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    

    {% for label, messages in app.flashes %}
        {% for message in messages %}
            {% if message == ('warning') %}
                <div class="flash-{{ label }} alert alert-success">
                    {{ message }}
                </div>
            {% endif %}
        {% endfor %}
    {% endfor %}

    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}

    
    {% if app.user %}
        <div class="checkbox mb-3"><h2>Vous êtes déjà connecté</h2>  {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
        {% else %}
        <div class="jumbotron">
            <h1 class="display-3">LOGIN TEAM</h1>
            <p class="lead">Bienvenue, si tu es membre de l'équipe d'administration, login pour avoir accès au tableau d'admin</p>
            <hr class="my-4">
            <p>Ton compte doit avoir été validé par l'administrateur du site</p>
            <div class="form-group">
                <label for="inputEmail">Email</label>
                <input type="email" value="{{ lastusername }}" name="email" id="inputEmail" class="form-control" placeholder="Email" required autofocus>
            </div>
                <label for="inputPassword">Password</label>
                <input type="password" name="password" id="inputPassword" class="form-control" placeholder="Password" required>
            

            <input type="hidden" name="_csrf_token"
                value="{{ csrf_token('authenticate') }}">
        </div>
        
        <button class="btn btn-lg btn-primary" type="submit">
            Connexion
        </button>
        
        <div>
            <a  href="{{ path('forgotten_password') }}">Forgotten password</a>
        </div>

        
    {% endif %}
    
</form>
{% endblock %}
